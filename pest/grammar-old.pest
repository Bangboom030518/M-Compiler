// Number Literals

numeric_literal = int | float;
float = -ufloat | ufloat;
ufloat = uint.uint;
int = uint | -uint;
uint = digit | nonzero digits;
digits = digit | digits digit;
digit = 0 | nonzero;
nonzero = { "1".."9" };

