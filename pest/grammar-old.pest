// Words

lowercase = { 'a'..'z' };
uppercase = { 'A'..'Z' };
lowercase_identifier = { (lowercase | "_")+ };
uppercase_identifier = { (uppercase | "_")+ };
identifier = lowercase_identifier | uppercase_identifier;
